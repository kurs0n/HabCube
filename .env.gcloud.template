# Google Cloud Environment Variables Template
# Skopiuj do .env.gcloud i wypełnij własnymi wartościami
# Service account for Cloud Run jobs and services
SERVICE_ACCOUNT=

# Google Cloud Project
PROJECT_ID=twoj-projekt-id
REGION=europe-west1

# Flask Configuration
FLASK_ENV=production
PORT=5000

# Database Configuration (Cloud SQL)
DB_HOST=
DB_PORT=5432
DB_NAME=habcube
DB_USER=admin
DB_PASSWORD=  # Będzie pobrane z Secret Manager

# Redis Configuration (Memorystore)
REDIS_HOST=  # IP Memorystore (np. 10.x.x.x)
REDIS_PORT=6379
REDIS_PASSWORD=  # Będzie pobrane z Secret Manager

# Security (będą pobrane z Secret Manager)
SECRET_KEY=
JWT_SECRET_KEY=

# Cloud SQL Connection Name (format: PROJECT_ID:REGION:INSTANCE_NAME)
CLOUD_SQL_CONNECTION_NAME=  
